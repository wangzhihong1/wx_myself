.posts-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.posts {
  display: flex;
  flex-direction: row;
  padding-left: 15px;
  margin-top: 15px;
  margin-bottom: 10px;
}

.posts-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.posts-time {
  margin-left: 20px;
  vertical-align: middle;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 15px;
}

.posts-link-img {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
