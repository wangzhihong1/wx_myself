/* pages/index/newsDateils.wxss */
.news-dateils-container{
  width:100%;
  display:flex;
  flex-direction:column;
}
.head-music{
  width: 100%;
  height: 460rpx;
  position: relative;
}
.head-bg{
  width:100%;
   height: 460rpx;
   position: absolute;
   left:0;
   top:0
}
.music-btn{
  width: 102rpx;
  height: 110rpx;
   position: absolute;
   left:50%;
   top:50%;
   margin: -55rpx -51rpx;
}
.author-info{
  flex-direction: row;
   margin-left: 30rpx;
  margin-top: 20rpx;
}
.author-img{
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}
.author-name{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.faBiao-time{
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.dateils-title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img Image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.datail-content {
  color: #666;
  margin: 20rpx 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size:30rpx;
}